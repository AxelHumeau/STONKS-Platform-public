{
  "name": "tokenized-asset-backend",
  "version": "1.0.0",
  "description": "Backend pour la plateforme Tokenized Asset Management",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run indexer:dev\"",
    "server:dev": "tsx watch src/server.ts",
    "indexer:dev": "tsx watch src/indexer/indexer.ts",
    "start": "node dist/server.js",
    "indexer": "node dist/indexer/indexer.js",
    "build": "tsc",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "oracle:push": "tsx src/services/oracleSigner.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "deep-email-validator": "^0.1.21",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "tokenization",
    "kyc",
    "defi"
  ],
  "author": "Tokenized Asset Platform",
  "license": "MIT"
}
