# Configuration Backend - Tokenized Asset Management Platform

# === Configuration Serveur ===
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# === Configuration Blockchain ===
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Alternative: https://rpc.sepolia.org/

# === Clés Privées (NE JAMAIS COMMITER) ===
DEPLOYER_PRIVATE_KEY=0x...
ORACLE_SIGNER_KEY=0x...

# === Adresses des Contrats (à remplir après déploiement) ===
KYC_CONTRACT_ADDRESS=0x...
FUND_CONTRACT_ADDRESS=0x...
NFT_CONTRACT_ADDRESS=0x...
ORACLE_CONTRACT_ADDRESS=0x...
DEX_CONTRACT_ADDRESS=0x...

# === Configuration DEX ===
UNISWAP_ROUTER_ADDRESS=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D

# === Configuration Base de Données ===
DATABASE_URL=postgresql://username:password@localhost:5432/tokenized_assets

# === Configuration API ===
BACKEND_API_KEY=your-secure-api-key-here

# === Configuration Oracle ===
ORACLE_SIGNER_ADDRESS=0x...

# === Configuration Indexer ===
INDEXER_POLLING_INTERVAL=60000
INDEXER_BATCH_SIZE=1000

# === Configuration Logs ===
LOG_LEVEL=info
LOG_FORMAT=json

# === Configuration Sécurité ===
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true

# === Configuration WebSocket ===
WS_ENABLED=true
WS_PORT=3001

# === Configuration Cache ===
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# === Configuration Monitoring ===
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# === Configuration Email (optionnel) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# === Configuration IPFS (optionnel) ===
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# === Configuration External APIs ===
ETHERSCAN_API_KEY=your-etherscan-api-key
COINGECKO_API_KEY=your-coingecko-api-key

# === Configuration Tests ===
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/tokenized_assets_test
TEST_PRIVATE_KEY=0x...

